{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "DesafioTecnico_Ache": "Warning"
    }
  },
  "ApiKeys": [
    "prod-api-key-secure-123456"
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/sap-integration-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "SapIntegration": {
    "BaseUrl": "https://sap-s4hana-production.ache.com.br",
    "ODataServiceUrl": "/sap/opu/odata/sap/API_SALES_ORDER_SRV",
    "Timeout": 60,
    "RetryAttempts": 5
  }
}
