{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "DesafioTecnico_Ache": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApiKeys": [
    "demo-api-key-12345",
    "test-api-key-67890",
    "ache-pharma-api-key"
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/sap-integration-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "SapIntegration": {
    "BaseUrl": "https://sap-s4hana-host.example.com",
    "ODataServiceUrl": "/sap/opu/odata/sap/API_SALES_ORDER_SRV",
    "Timeout": 30,
    "RetryAttempts": 3,
    "Comment": "Configurações para integração real com SAP S/4HANA via OData v4"
  }
}
